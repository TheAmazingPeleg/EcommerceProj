<!DOCTYPE html>
<html lang="en">
<head>
  <title>Ecommerce Project</title>
  <link rel="icon" href="../assets/images/favicon.ico">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="stylesheet" href="/assets/css/category.css">
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar" style="background-color: #ED2E73;"></span>
          <span class="icon-bar" style="background-color: #ED2E73;"></span>
          <span class="icon-bar" style="background-color: #ED2E73;"></span>
        </button>
        <a class="navbar-brand" href="/"><img src="../assets/images/emptyLogo.png" alt="logo" width="71px" height="71px"></a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><a id="searchHolder"><span class="glyphicon glyphicon-search" id="searchButton" onclick="searchInit()"></span><span id="searchElem"></span></a></li>
          <% categories.forEach((categry) => {
            %>
              <li><a href="/<%=categry.name %>"><%= categry.name %></a></li>
            <%
          }) %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cartAmount"></span>
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" id="navBarCart">
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <div class="inner-img-container">
          <img src="../assets/images/slider/slider_1.jpg" alt="SunGlasses Model">
        </div>
        <div class="carousel-caption">
          <h3><%= category.name %></h3>
          <p><%= category.slogan %><p>
        </div>      
      </div>
    </div>
</div>

<%
  let i = 0, j = 0;
  products.forEach((product) => {
    if(i % 3 === 0){
      if(j % 2 === 0){
        %>
        <div>
        <%
      }else{
        %>
        <div class="bg-1">
        <%
      }
      %>
      <div class="container">
        <div class="row text-center">
      <%
      j ++;
    }
    %>
      <div class="col-sm-4">
        <div class="thumbnail">
          <div class="productImage">
            <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="productImage-main">
            <img src="<%= product.images[1] %>" alt="<%= product.name %>" class="productImage-hover">
          </div>
          <p><strong><%= product.name %></strong></p>
          <em>&#8362;<del><%= product.priceBeforeDiscount %></del> - &#8362;<%= product.price %></em><br />
          <p><%= product.description %></p>
          <a href="<%= category.name %>/<%= product._id %>"><button class="btn">View Product</button></a>
        </div>
      </div>
    <%
    if(i % 3 === 2){
      %>
          </div>
        </div>
      </div>
      <%
    }
    i ++;
});
if(i % 3 !== 2){
  %>
          </div>
        </div>
      </div>
      <%
}
%>

<!-- Footer -->
<footer class="text-center">
  <a class="up-arrow" href="#myPage" data-toggle="tooltip" title="TO TOP">
    <span class="glyphicon glyphicon-chevron-up"></span>
  </a><br><br>
  <p>Copyright Â© 2023 Ecommerce Project</p> 
</footer>
<script src="/assets/js/main.js"></script>
</body>
</html>
