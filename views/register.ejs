<html>
  <head>
    <link rel="icon" href="../assets/images/favicon.ico">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Login</title>
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/loginPanel.css">
  </head>
  <body>
    <div class="topNav-buttons">
      <a href="/">< Home</a>
      <a href="/login">Login ></a>
    </div>
    <div class="container text-center">
      <img src="../assets/images/logo.png" href="/">
      <h1 id="loginModeHead"></h1>
      <form class="form-container">
        <div class="form-field">
          <label class="form-field-label">first name:</label>
          <input type="text" id="firstName" class="form-input-field" name="firstName" /><br />
        </div>
        <div class="form-field">
          <label class="form-field-label">last name:</label>
          <input type="text" id="lastName" class="form-input-field" name="lastName" /><br />
        </div>
        <div class="form-field">
          <label class="form-field-label">Username:</label>
          <input type="text" id="username" class="form-input-field" name="username" /><br />
        </div>
        <div class="form-field">
          <label class="form-field-label">Password:</label>
          <input type="password" id="password" class="form-input-field" name="password" /><br />
        </div>
        <div class="form-field">
          <label class="form-field-label">email:</label>
          <input type="email" id="email" class="form-input-field" name="email" /><br />
        </div>
        <div class="btn btn-primary" onclick="handleRegister()">Sign-Up!</div>
      </form>
      <div id="errors-container"></div>
    </div>
    <script src="/assets/js/login.js"></script>
  </body>
</html>